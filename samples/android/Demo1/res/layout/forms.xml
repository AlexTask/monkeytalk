<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/formsTitle"
        android:textSize="24dp" />

    <Spinner
        android:id="@+id/forms_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/formsSpinnerDesc"
        android:prompt="@string/formsSpinnerPrompt" />

    <CheckBox
        android:id="@+id/forms_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/formsCheckboxDesc"
        android:checked="true"
        android:text="@string/formsCheckBoxOn" />

    <RadioGroup
        android:id="@+id/forms_radios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/formsRadiosDesc"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/forms_radio_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/formsRadioA" />

        <RadioButton
            android:id="@+id/forms_radio_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/formsRadioB" />

        <RadioButton
            android:id="@+id/forms_radio_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/formsRadioC" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/forms_slider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/formsSliderDesc"
        android:max="100"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:progress="10" />

    <TextView
        android:id="@+id/forms_val"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/formsValueDesc"
        android:gravity="center"
        android:width="0dip" />

</LinearLayout>